<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".PaginaInicio">


    <androidx.gridlayout.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        app:alignmentMode="alignBounds"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.51"
        app:rowCount="6"
        app:useDefaultMargins="true">

        <ImageView
            android:id="@+id/img_biblioteca"
            android:layout_width="170dp"
            android:layout_height="174dp"
            android:contentDescription="@string/bibliotecas"
            android:src="@drawable/ic_bibliotecas"
            app:layout_column="0"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/img_comedores"
            android:layout_width="171dp"
            android:layout_height="174dp"
            android:contentDescription="@string/comedores"
            android:src="@drawable/ic_asiento"
            app:layout_column="1"
            app:layout_row="0" />

        <TextView
            android:id="@+id/text_comedores"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/comedores"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="1" />

        <TextView
            android:id="@+id/text_biblioteca"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="@string/bibliotecas"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/img_calendario"
            android:layout_width="168dp"
            android:layout_height="193dp"
            android:contentDescription="@string/calendario"
            android:src="@drawable/ic_calendario"
            app:layout_column="0"
            app:layout_row="2" />

        <TextView
            android:id="@+id/text_calendario"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="@string/calendario"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="3" />

        <ImageView
            android:id="@+id/img_grados"
            android:layout_width="172dp"
            android:layout_height="193dp"
            android:contentDescription="@string/grados"
            android:src="@drawable/ic_grados"
            app:layout_column="1"
            app:layout_row="2" />

        <TextView
            android:id="@+id/text_grados"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:text="@string/grados"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="3" />

        <ImageView
            android:id="@+id/img_sitios_interes"
            android:layout_width="170dp"
            android:layout_height="181dp"
            android:contentDescription="@string/sitios_interes"
            android:src="@drawable/ic_sitios_interes"
            app:layout_column="0"
            app:layout_row="4" />

        <ImageView
            android:id="@+id/img_centros"
            android:layout_width="172dp"
            android:layout_height="181dp"
            android:contentDescription="@string/centros"
            android:src="@drawable/ic_universidad"
            app:layout_column="1"
            app:layout_row="4" />

        <TextView
            android:id="@+id/text_centros"
            android:layout_width="169dp"
            android:layout_height="41dp"
            android:text="@string/centros"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="5" />

        <TextView
            android:id="@+id/text_sitios_interes"
            android:layout_width="169dp"
            android:layout_height="46dp"
            android:text="@string/sitios_de_n_interes"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="5" />

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>